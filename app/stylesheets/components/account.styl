.profile
	width 100%
	height 320px
	padding 0px 15px
	
	display flex
	display -webkit-flex
	align-items center
	justify-content center
	-webkit-justify-content center
	flex-direction column
	-webkit-flex-direction column
	
	gradient()
	
	> .image
		width 140px
		height 140px
		border-radius 50%
		background-color #FFFFFF
		shadowLight()
		
	> .name
	> .email
		color #FFFFFF
		font-weight 400
		line-height 1.8rem
	
	> .name
		margin-top 15px
	
	> .email
		font-size 0.9rem
