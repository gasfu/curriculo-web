.button 
	display inline-block
	padding 10px 32px
	border-style solid
	border-width 2px
	border-radius 5px
	font-size 1.8em
	
	&.--inverse
		color #FFFFFF
		border-color #FFFFFF 
		transition-duration: .6s;
		
		&:hover 
			color $color-one
			background-color #FFFFFF
			border-color #FFFFFF
			transition-duration: .6s;